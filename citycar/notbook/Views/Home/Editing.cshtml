@model notbook.Models.Order
@{
    ViewData["Title"] = "Editing";
}

<h1>Настройка заказа</h1>
<style>
    body {
        background: #FFFFE0; /* Цвет фона */
        color: #000000; /* Цвет текста */
    }
</style>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        @using (Html.BeginForm("EditBook", "Home", FormMethod.Post))
        {
        <fieldset>
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.statuss)
            <p>
                @Html.LabelFor(m => m.Firstname, "Имя водителя")
                <br />
                @Html.EditorFor(m => m.Firstname)
            </p>
            <p>
                @Html.LabelFor(m => m.Secondname, "Фамилия ")
                <br />
                @Html.EditorFor(m => m.Secondname)
            </p>
            <p>
                @Html.LabelFor(m => m.Birthday, "Дата выезда")
                <br />
                @Html.EditorFor(m => m.Birthday)
            </p>
            <p>
                @Html.LabelFor(m => m.sizecar, "количество мест")
                <br />
                @Html.EditorFor(m => m.sizecar)
            </p>
            <p>
                @Html.LabelFor(m => m.City1, "Город выезда")
                <br />
                @Html.EditorFor(m => m.City1)
            </p>
            <p>
                @Html.LabelFor(m => m.City2, "Город прибытия")
                <br />
                @Html.EditorFor(m => m.City2)
            </p>

            <p><input class="form-control form-control-lg" placeholder=".form-control-lg" type="submit" value="Отправить" /></p>
        </fieldset>
        }
        


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>